{
    "compilerOptions": {
        "baseUrl": "src",
        "alwaysStrict": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "ES2022",
        "target": "ES2022",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": []
